<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="550.0" prefWidth="650.0" style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #4a69bd);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.EditGameSessionController">
   <children>
      <Text fill="#ecf0f1" layoutX="30.0" layoutY="50.0" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Éditer Session de Jeux">
         <effect>
            <DropShadow color="#00000066" offsetX="0.0" offsetY="2.0" radius="5.0" />
         </effect>
      </Text>

      <GridPane hgap="30" layoutX="30.0" layoutY="100.0" prefHeight="350.0" prefWidth="590.0" vgap="20">
         <children>
            <Label style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1;" text="Client" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ComboBox fx:id="clientComboBox" prefHeight="35.0" prefWidth="250.0" promptText="Choisir un client" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px;" GridPane.columnIndex="1" GridPane.rowIndex="0">
               <effect>
                  <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
               </effect>
            </ComboBox>

            <Label style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1;" text="Jeu" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="gameComboBox" prefHeight="35.0" prefWidth="250.0" promptText="Choisir un jeu" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px;" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <effect>
                  <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
               </effect>
            </ComboBox>

            <Label style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1;" text="Durée payée (min)" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="paidDurationField" prefHeight="35.0" prefWidth="250.0" promptText="Durée payée (min)" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px; -fx-prompt-text-fill: #7f8c8d;" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <effect>
                  <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
               </effect>
            </TextField>

            <Label style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1;" text="Statut" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id="statusComboBox" prefHeight="35.0" prefWidth="250.0" promptText="Choisir un statut" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px;" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <effect>
                  <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
               </effect>
            </ComboBox>
         </children>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="270.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
         </rowConstraints>
      </GridPane>

      <HBox alignment="CENTER" layoutX="30.0" layoutY="470.0" spacing="30.0" prefWidth="590.0">
         <children>
            <Button fx:id="editButton" onAction="#saveGameSession" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;" text="Modifier">
               <effect>
                  <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
               </effect>
            </Button>
            <Button fx:id="cancelButton" onAction="#cancel" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;" text="Annuler">
               <effect>
                  <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
               </effect>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>