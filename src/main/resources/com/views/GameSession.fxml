<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #4a69bd);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.GameSessionController">
   <Text fill="#ecf0f1" layoutX="30.0" layoutY="50.0" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Gestion des Sessions de Jeux">
      <effect>
         <DropShadow color="#00000066" offsetX="0.0" offsetY="2.0" radius="5.0" />
      </effect>
   </Text>

   <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="90.0" spacing="15.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
      <children>
         <TextField fx:id="searchGameSessionField" prefHeight="35.0" prefWidth="300.0" promptText="Rechercher une session de jeu" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px; -fx-prompt-text-fill: #7f8c8d;">
            <effect>
               <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
            </effect>
         </TextField>
         <Button fx:id="searchGameSessionButton" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 15px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;" text="Rechercher">
            <effect>
               <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
            </effect>
         </Button>
      </children>
   </HBox>

   <TableView fx:id="gameSessionTable" layoutX="30.0" layoutY="150.0" prefHeight="350.0" prefWidth="740.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10px; -fx-border-color: #e0e0e0; -fx-border-radius: 10px; -fx-selection-bar: #4a69bd; -fx-selection-bar-text: white;" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
      <columns>
         <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID" />
         <TableColumn fx:id="clientColumn" prefWidth="170.0" text="Client" />
         <TableColumn fx:id="gameColumn" prefWidth="170.0" text="Jeu" />
         <TableColumn fx:id="paidDurationColumn" prefWidth="170.0" text="Durée Payée (min)" />
         <TableColumn fx:id="statusColumn" prefWidth="170.0" text="Statut" />
      </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
      <effect>
         <DropShadow color="#00000033" offsetX="0.0" offsetY="3.0" radius="10.0" />
      </effect>
   </TableView>

   <HBox alignment="CENTER_RIGHT" layoutX="30.0" layoutY="520.0" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.rightAnchor="30.0">
      <children>
         <Button fx:id="addGameSessionButton" onAction="#openAddGameSessionWindow" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;" text="Ajouter">
            <effect>
               <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
            </effect>
         </Button>
         <Button fx:id="deleteGameSessionButton" onAction="#deleteGameSession" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;" text="Supprimer">
            <effect>
               <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
            </effect>
         </Button>
      </children>
   </HBox>
</AnchorPane>