<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx/8" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.controllers.ChoosePosteAndGameController"
      style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #4a69bd); -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 15, 0, 0, 5);">
    
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    
    <spacing>20</spacing>
    
    <children>
        <!-- Titre -->
        <Label text="ðŸŽ® Reprise de Session" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ecf0f1;">
            <effect>
                <DropShadow color="#00000066" offsetX="0.0" offsetY="2.0" radius="5.0" />
            </effect>
        </Label>
        
        <!-- Zone de sÃ©lection -->
        <VBox spacing="15" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);">
            
            <!-- SÃ©lection Poste -->
            <VBox spacing="5">
                <Label text="Poste" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <ComboBox fx:id="posteComboBox" 
                         promptText="SÃ©lectionnez un poste..."
                         style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-pref-height: 35; -fx-font-size: 14; -fx-prompt-text-fill: #7f8c8d; -fx-pref-width: 300;">
                    <effect>
                        <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
                    </effect>
                </ComboBox>
            </VBox>
            
            <!-- SÃ©paration -->
            <Region prefHeight="1" style="-fx-background-color: #ecf0f1; -fx-pref-width: 100%;"/>
            
            <!-- SÃ©lection Jeu -->
            <VBox spacing="5">
                <Label text="Jeu" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <ComboBox fx:id="gameComboBox" 
                         promptText="SÃ©lectionnez un jeu..."
                         style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-pref-height: 35; -fx-font-size: 14; -fx-prompt-text-fill: #7f8c8d; -fx-pref-width: 300;">
                    <effect>
                        <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
                    </effect>
                </ComboBox>
            </VBox>
        </VBox>

        <!-- Boutons -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Annuler" 
                    onAction="#cancel" 
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;">
                <effect>
                    <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
                </effect>
            </Button>
            
            <Button text="Valider" 
                    onAction="#validate" 
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;">
                <effect>
                    <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
                </effect>
            </Button>
        </HBox>
    </children>
</VBox>