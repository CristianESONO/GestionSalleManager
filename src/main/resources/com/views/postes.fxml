<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:controller="com.controllers.PosteController" prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #4a69bd);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <VBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="30.0" spacing="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
        <children>
            <HBox alignment="CENTER_LEFT" spacing="15">
                <children>
                    <Text fill="#ecf0f1" style="-fx-font-size: 32px; -fx-font-weight: bold;" text="Gestion des Postes">
                        <effect>
                            <DropShadow color="#00000066" offsetX="0.0" offsetY="2.0" radius="5.0" />
                        </effect>
                    </Text>
                </children>
            </HBox>

            <HBox alignment="CENTER_LEFT">
                <children>
                    <Button fx:id="btnAjouterPoste" onAction="#openAddPosteWindow" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;" text="Ajouter un Poste">
                        <effect>
                            <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
                        </effect>
                    </Button>
                </children>
            </HBox>
        </children>
    </VBox>

    <ScrollPane fitToWidth="true" layoutX="30.0" layoutY="140.0" prefHeight="480.0" prefWidth="940.0" style="-fx-background-color: transparent; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px;" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="140.0">
        <content>
            <GridPane fx:id="gridPostes" hgap="25.0" vgap="25.0" style="-fx-background-color: #ffffff; -fx-padding: 10px; -fx-background-radius: 5px;">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <effect>
                    <DropShadow color="#0000001a" offsetX="0.0" offsetY="2.0" radius="5.0" />
                </effect>
            </GridPane>
        </content>
    </ScrollPane>

    <HBox alignment="CENTER" layoutX="30.0" layoutY="640.0" spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
        <children>
            <Button fx:id="btnPrecedent" onAction="#previousPage" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;" text="⟵ Précédent">
                <effect>
                    <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
                </effect>
            </Button>

            <Button fx:id="btnSuivant" onAction="#nextPage" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;" text="Suivant ⟶">
                <effect>
                    <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
                </effect>
            </Button>
        </children>
    </HBox>

</AnchorPane>