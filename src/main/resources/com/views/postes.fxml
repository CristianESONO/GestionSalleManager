<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:controller="com.controllers.PosteController" prefHeight="700.0" prefWidth="1000.0" styleClass="content-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <VBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="30.0" spacing="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
        <children>
            <Label styleClass="section-title" text="Gestion des Postes" />
            <HBox alignment="CENTER_LEFT">
                <children>
                    <Button fx:id="btnAjouterPoste" onAction="#openAddPosteWindow" prefHeight="45.0" prefWidth="180.0" styleClass="action-button" text="Ajouter un Poste" />
                </children>
            </HBox>
        </children>
    </VBox>

    <ScrollPane fitToWidth="true" styleClass="scroll-pane" layoutX="30.0" layoutY="140.0" prefHeight="480.0" prefWidth="940.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="140.0">
        <content>
            <GridPane fx:id="gridPostes" styleClass="card-pane" hgap="25.0" vgap="25.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </GridPane>
        </content>
    </ScrollPane>

    <HBox alignment="CENTER" layoutX="30.0" layoutY="640.0" spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
        <children>
            <Button fx:id="btnPrecedent" onAction="#previousPage" prefHeight="45.0" prefWidth="150.0" styleClass="pagination-button" text="⟵ Précédent" />
            <Button fx:id="btnSuivant" onAction="#nextPage" prefHeight="45.0" prefWidth="150.0" styleClass="pagination-button" text="Suivant ⟶" />
        </children>
    </HBox>

</AnchorPane>