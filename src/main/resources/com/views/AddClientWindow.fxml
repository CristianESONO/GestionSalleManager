<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #4a69bd);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.AddClientController">
   <children>
      <Text fill="#ecf0f1" layoutX="30.0" layoutY="50.0" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Ajouter Client">
         <effect>
            <DropShadow color="#00000066" offsetX="0.0" offsetY="2.0" radius="5.0" />
         </effect>
      </Text>

      <GridPane hgap="20" layoutX="30.0" layoutY="100.0" prefHeight="250.0" prefWidth="540.0" vgap="20">
         <children>
            <TextField fx:id="nameField" prefHeight="35.0" prefWidth="250.0" promptText="Nom" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px; -fx-prompt-text-fill: #7f8c8d;">
               <effect>
                  <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
               </effect>
            </TextField>
            <TextField fx:id="emailField" prefHeight="35.0" prefWidth="250.0" promptText="Email" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px; -fx-prompt-text-fill: #7f8c8d;" GridPane.rowIndex="1">
               <effect>
                  <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
               </effect>
            </TextField>
            <TextField fx:id="phoneField" prefHeight="35.0" prefWidth="250.0" promptText="Numéro de téléphone" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px; -fx-prompt-text-fill: #7f8c8d;" GridPane.rowIndex="2">
               <effect>
                  <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
               </effect>
            </TextField>
            <DatePicker fx:id="birthDateField" prefHeight="35.0" prefWidth="250.0" promptText="Date de naissance" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px; -fx-prompt-text-fill: #7f8c8d;" GridPane.rowIndex="3">
               <effect>
                  <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
               </effect>
            </DatePicker>

            <TextField fx:id="addressField" prefHeight="35.0" prefWidth="250.0" promptText="Adresse" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px; -fx-prompt-text-fill: #7f8c8d;" GridPane.columnIndex="1" GridPane.rowIndex="0">
               <effect>
                  <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
               </effect>
            </TextField>
            <TextField fx:id="loyaltyPointsField" prefHeight="35.0" prefWidth="250.0" promptText="Points de fidélité" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px; -fx-prompt-text-fill: #7f8c8d;" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <effect>
                  <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
               </effect>
            </TextField>
            <ComboBox fx:id="roleComboBox" prefHeight="35.0" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px;" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <effect>
                  <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
               </effect>
            </ComboBox>

            <Button fx:id="addButton" onAction="#addClient" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;" text="Ajouter" GridPane.halignment="LEFT" GridPane.rowIndex="4">
               <effect>
                  <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
               </effect>
            </Button>
            <Button fx:id="cancelButton" onAction="#cancel" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;" text="Annuler" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
               <effect>
                  <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
               </effect>
            </Button>
         </children>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
         </rowConstraints>
      </GridPane>
   </children>
</AnchorPane>