<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane fx:controller="com.controllers.PosteJeuController" prefWidth="1200.0" prefHeight="800.0" style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #4a69bd);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <VBox alignment="CENTER_LEFT" spacing="15">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <Text fill="#ecf0f1" style="-fx-font-size: 32px; -fx-font-weight: bold;" text="Postes et Jeux">
                    <effect>
                        <DropShadow color="#00000066" offsetX="0.0" offsetY="2.0" radius="5.0" />
                    </effect>
                </Text>
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <children>
                        <Button fx:id="btnAjouterPoste" onAction="#ajouterPoste" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;" text="Ajouter Poste">
                            <effect>
                                <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
                            </effect>
                        </Button>
                        <Button fx:id="btnAjouterJeu" onAction="#ajouterJeu" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;" text="Ajouter Jeu">
                            <effect>
                                <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
                            </effect>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
            </padding>
            <content>
                <GridPane fx:id="gridPostes" hgap="30" vgap="30" />
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
            </padding>
            <children>
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button onAction="#previousPage" prefHeight="40.0" prefWidth="140.0" style="-fx-background-color: #4a69bd; -fx-text-fill: white; -fx-font-size: 15px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;" text="⟵ Précédent">
                            <effect>
                                <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
                            </effect>
                        </Button>
                        <Button onAction="#nextPage" prefHeight="40.0" prefWidth="140.0" style="-fx-background-color: #4a69bd; -fx-text-fill: white; -fx-font-size: 15px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;" text="Suivant ⟶">
                            <effect>
                                <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
                            </effect>
                        </Button>
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="30">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <children>
                                <Region style="-fx-background-color: #2ecc71; -fx-min-width: 25; -fx-min-height: 25; -fx-border-radius: 5; -fx-background-radius: 5;" />
                                <Label style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-font-size: 15px;" text="Disponible" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <children>
                                <Region style="-fx-background-color: #f39c12; -fx-min-width: 25; -fx-min-height: 25; -fx-border-radius: 5; -fx-background-radius: 5;" />
                                <Label style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-font-size: 15px;" text="Indisponible" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <children>
                                <Region style="-fx-background-color: #e74c3c; -fx-min-width: 25; -fx-min-height: 25; -fx-border-radius: 5; -fx-background-radius: 5;" />
                                <Label style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-font-size: 15px;" text="Hors service" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>

</BorderPane>