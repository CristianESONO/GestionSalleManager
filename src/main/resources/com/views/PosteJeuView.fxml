<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane fx:controller="com.controllers.PosteJeuController" prefWidth="1200.0" prefHeight="800.0" styleClass="content-pane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <VBox alignment="CENTER_LEFT" spacing="15">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <Label styleClass="section-title" text="Postes et Jeux" />
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <children>
                        <Button fx:id="btnAjouterPoste" onAction="#ajouterPoste" prefHeight="45.0" prefWidth="180.0" styleClass="action-button" text="Ajouter Poste" />
                        <Button fx:id="btnAjouterJeu" onAction="#ajouterJeu" prefHeight="45.0" prefWidth="180.0" styleClass="material-button-primary" text="Ajouter Jeu" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
            </padding>
            <content>
                <GridPane fx:id="gridPostes" hgap="30" vgap="30" />
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
            </padding>
            <children>
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button onAction="#previousPage" prefHeight="40.0" prefWidth="140.0" styleClass="pagination-button" text="⟵ Précédent" />
                        <Button onAction="#nextPage" prefHeight="40.0" prefWidth="140.0" styleClass="pagination-button" text="Suivant ⟶" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="30">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <children>
                                <Region style="-fx-background-color: #059669; -fx-min-width: 25; -fx-min-height: 25; -fx-border-radius: 5; -fx-background-radius: 5;" />
                                <Label style="-fx-text-fill: -text-secondary; -fx-font-weight: bold; -fx-font-size: 15px;" text="Disponible" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <children>
                                <Region style="-fx-background-color: #d97706; -fx-min-width: 25; -fx-min-height: 25; -fx-border-radius: 5; -fx-background-radius: 5;" />
                                <Label style="-fx-text-fill: -text-secondary; -fx-font-weight: bold; -fx-font-size: 15px;" text="Indisponible" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <children>
                                <Region style="-fx-background-color: #dc2626; -fx-min-width: 25; -fx-min-height: 25; -fx-border-radius: 5; -fx-background-radius: 5;" />
                                <Label style="-fx-text-fill: -text-secondary; -fx-font-weight: bold; -fx-font-size: 15px;" text="Hors service" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>

</BorderPane>