<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1300.0" style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #4a69bd);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.ReservationController">
    <children>
        <VBox alignment="TOP_LEFT" spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <children>
                        <Label style="-fx-font-family: 'Font Awesome 5 Free', 'Segoe UI'; -fx-font-size: 28px; -fx-text-fill: #ecf0f1; -fx-font-weight: 900;" text="&#xf013;" />
                        <Label text="Gestion des Réservations" style="-fx-font-family: 'Segoe UI', sans-serif; -fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ecf0f1;">
                            <effect>
                                <DropShadow color="#00000066" offsetX="0.0" offsetY="2.0" radius="5.0" />
                            </effect>
                        </Label>
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="15">
                    <children>
                        <Button fx:id="addReservationButton" onAction="#openAddReservationWindow" text="Ajouter Réservation" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;">
                            <effect>
                                <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
                            </effect>
                        </Button>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="searchReservationField" promptText="Rechercher une réservation..." style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px; -fx-prompt-text-fill: #7f8c8d;">
                            <effect>
                                <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
                            </effect>
                        </TextField>
                        <Button fx:id="searchReservationButton" text="Rechercher" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;">
                            <effect>
                                <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
                            </effect>
                        </Button>
                    </children>
                </HBox>

                <TabPane fx:id="mainTabPane" VBox.vgrow="ALWAYS" style="-fx-tab-min-width: 150px; -fx-tab-max-width: 200px;">
                    <tabs>
                        <Tab fx:id="reservationsTab" closable="false" text="Toutes les Réservations">
                            <content>
                                <AnchorPane style="-fx-background-color: #ffffff; -fx-padding: 10px; -fx-background-radius: 0 5px 5px 5px;">
                                    <effect>
                                        <DropShadow color="#0000001a" offsetX="0.0" offsetY="2.0" radius="5.0" />
                                    </effect>
                                    <children>
                                        <TableView fx:id="reservationTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" style="-fx-background-color: transparent; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px;">
                                            <columns>
                                                <TableColumn fx:id="numeroTicketColumn" text="Numéro Ticket" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="clientColumn" text="Client" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="posteColumn" text="Poste" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="gameColumn" text="Jeu" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="durationColumn" text="Durée" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="totalPriceColumn" text="Prix Total" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="reservationDateColumn" text="Date de Réservation" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="parrainCodeColumn" text="Parrain" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="statusColumn" text="Statut" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="actionColumn" text="Action" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>

                        <Tab fx:id="activeSessionsTab" closable="false" text="Sessions Actives">
                            <content>
                                <AnchorPane style="-fx-background-color: #ffffff; -fx-padding: 10px; -fx-background-radius: 0 5px 5px 5px;">
                                    <effect>
                                        <DropShadow color="#0000001a" offsetX="0.0" offsetY="2.0" radius="5.0" />
                                    </effect>
                                    <children>
                                        <TableView fx:id="activeSessionsTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" style="-fx-background-color: transparent; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px;">
                                            <columns>
                                                <TableColumn fx:id="sessionClientColumn" text="Client" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="sessionPosteColumn" text="Poste" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="sessionGameColumn" text="Jeu" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="sessionStartTimeColumn" text="Heure Début" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="sessionEndTimeColumn" text="Heure Fin Estimée" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="sessionRemainingTimeColumn" text="Temps Restant" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="sessionStatusColumn" text="Statut" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;" />
                                                <TableColumn fx:id="sessionActionsColumn" text="Actions" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #ecf0f1;">
                                                </TableColumn>
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
    </children>
</AnchorPane>