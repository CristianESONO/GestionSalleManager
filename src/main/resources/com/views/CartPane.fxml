<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.CartController"
            prefHeight="450.0" prefWidth="450.0"
            styleClass="card-pane">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <top>
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <Text text="Votre Panier" style="-fx-fill: #333333;">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Text>
            <BorderPane.margin>
                <Insets bottom="15.0" />
            </BorderPane.margin>
        </HBox>
    </top>

    <center>
        <ListView fx:id="cartItemsList"
                  style="-fx-background-color: #FDFDFD; -fx-border-color: #D0D0D0; -fx-border-width: 1px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 5px;">
            <BorderPane.margin>
                <Insets bottom="15.0" />
            </BorderPane.margin>
        </ListView>
    </center>

    <bottom>
        <VBox alignment="TOP_CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Text text="Prix Total :" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #555555;" />
                <Text fx:id="prixTotalText" text="0.00 FCFA" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #4CAF50;" />
            </HBox>

            <HBox alignment="CENTER" spacing="15.0">
                <Button onAction="#handlePayer" text="Payer"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 15px; -fx-pref-width: 120px; -fx-padding: 10 0; -fx-background-radius: 6; -fx-border-radius: 6;" />
                <Button onAction="#viderPanier" text="Vider le panier"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 15px; -fx-pref-width: 120px; -fx-padding: 10 0; -fx-background-radius: 6; -fx-border-radius: 6;" />
                <Button onAction="#closeCart" text="Fermer"
                        style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 15px; -fx-pref-width: 120px; -fx-padding: 10 0; -fx-background-radius: 6; -fx-border-radius: 6;" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>