<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ScrollPane?>


<AnchorPane fx:controller="com.controllers.ProduitController" prefHeight="750.0" prefWidth="1000.0" styleClass="content-pane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

    <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="30.0" spacing="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
        <Label styleClass="section-title" text="Gestion des Produits" />
        <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT" spacing="20.0">
            <Button fx:id="btnAjouterProduit" onAction="#ajouterProduit" prefHeight="45.0" prefWidth="180.0" styleClass="action-button" text="Ajouter Produit" />
            <HBox alignment="CENTER" onMouseClicked="#showCart" spacing="5.0" style="-fx-cursor: hand;">
                <ImageView fx:id="cartIcon" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/cart.png" />
                    </image>
                </ImageView>
                <Text fx:id="cartCounter" fill="#0f172a" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="0" />
            </HBox>
        </HBox>
    </HBox>

    <ScrollPane fitToWidth="true" styleClass="scroll-pane" layoutX="30.0" layoutY="100.0" prefHeight="550.0" prefWidth="940.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="100.0">
        <content>
            <GridPane fx:id="gridProduits" hgap="25.0" vgap="25.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </GridPane>
        </content>
    </ScrollPane>

    <HBox alignment="CENTER" layoutX="30.0" layoutY="680.0" spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
        <Button onAction="#previousPage" prefHeight="45.0" prefWidth="150.0" styleClass="pagination-button" text="⟵ Précédent" />
        <Button onAction="#nextPage" prefHeight="45.0" prefWidth="150.0" styleClass="pagination-button" text="Suivant ⟶" />
    </HBox>

</AnchorPane>