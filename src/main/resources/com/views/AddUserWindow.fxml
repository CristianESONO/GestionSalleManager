<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="400.0" styleClass="content-pane form-dialog" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.AddUserController">
   <children>
      <Label layoutX="30.0" layoutY="50.0" styleClass="section-title" text="Ajouter Utilisateur" />
      <TextField fx:id="nameField" layoutX="30.0" layoutY="100.0" prefHeight="35.0" prefWidth="340.0" promptText="Nom" styleClass="search-field" />
      <TextField fx:id="emailField" layoutX="30.0" layoutY="160.0" prefHeight="35.0" prefWidth="340.0" promptText="Email" styleClass="search-field" />
      <PasswordField fx:id="passwordField" layoutX="30.0" layoutY="220.0" prefHeight="35.0" prefWidth="340.0" promptText="Mot de passe" styleClass="search-field" />
      <ComboBox fx:id="roleComboBox" layoutX="30.0" layoutY="280.0" prefHeight="35.0" prefWidth="340.0" promptText="Sélectionner un rôle" styleClass="search-field" />
      <Button fx:id="addButton" onAction="#addUser" layoutX="30.0" layoutY="370.0" prefHeight="45.0" prefWidth="150.0" styleClass="action-button" text="Ajouter" />
      <Button fx:id="cancelButton" onAction="#cancel" layoutX="220.0" layoutY="370.0" prefHeight="45.0" prefWidth="150.0" styleClass="danger-button" text="Annuler" />
   </children>
</AnchorPane>