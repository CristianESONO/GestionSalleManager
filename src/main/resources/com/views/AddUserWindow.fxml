<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="450.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #4a69bd);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.AddUserController">
   <children>
      <Text fill="#ecf0f1" layoutX="30.0" layoutY="50.0" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Ajouter Utilisateur">
         <effect>
            <DropShadow color="#00000066" offsetX="0.0" offsetY="2.0" radius="5.0" />
         </effect>
      </Text>

      <TextField fx:id="nameField" layoutX="30.0" layoutY="100.0" prefHeight="35.0" prefWidth="340.0" promptText="Nom" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px; -fx-prompt-text-fill: #7f8c8d;">
         <effect>
            <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
         </effect>
      </TextField>
      <TextField fx:id="emailField" layoutX="30.0" layoutY="160.0" prefHeight="35.0" prefWidth="340.0" promptText="Email" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px; -fx-prompt-text-fill: #7f8c8d;">
         <effect>
            <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
         </effect>
      </TextField>
      <PasswordField fx:id="passwordField" layoutX="30.0" layoutY="220.0" prefHeight="35.0" prefWidth="340.0" promptText="Mot de passe" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px; -fx-prompt-text-fill: #7f8c8d;">
         <effect>
            <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
         </effect>
      </PasswordField>

      <ComboBox fx:id="roleComboBox" layoutX="30.0" layoutY="280.0" prefHeight="35.0" prefWidth="340.0" promptText="Sélectionner un rôle" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 8px 10px;">
         <effect>
            <DropShadow color="#0000001a" offsetX="0.0" offsetY="1.0" radius="3.0" />
         </effect>
      </ComboBox>

      <Button fx:id="addButton" onAction="#addUser" layoutX="30.0" layoutY="370.0" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;" text="Ajouter">
         <effect>
            <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
         </effect>
      </Button>
      <Button fx:id="cancelButton" onAction="#cancel" layoutX="220.0" layoutY="370.0" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;" text="Annuler">
         <effect>
            <DropShadow color="#00000033" offsetX="0.0" offsetY="2.0" radius="5.0" />
         </effect>
      </Button>
   </children>
</AnchorPane>